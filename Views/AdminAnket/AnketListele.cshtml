@using ibrasOneriAnket.Models
@model List<AnketOlustur>

@{
    ViewBag.Title = "AnketListele";
    Layout = "~/Views/Shared/_AdminControlLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Anket Listesi</h2>
<br />

<table class="table table-striped table-dark" id="tbl1">
    <thead>
        <tr>
            <th scope="col">Anket Adı</th>
            <th scope="col">Detaylar</th>
            <th scope="col">Cevapları Düzenle</th>
            <th class="text-center" scope="col">Anket Sonuçları</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr >
            <td>@x.AnketAdi</td>
            <td><a href="/AdminAnket/AnketGetirr/@x.Id" class="btn btn-success">Detaylar</a></td>
            <td><a href="/AdminAnket/AnketCevapGoruntule/@x.Id" class="btn btn-primary">Cevaplar</a></td>
            <td><a href="/VisualizeData/AnketeAitSonuclar/@x.Id" style="border:1px solid green;margin-left:10px; border-radius:4px;" class="btn btn-outline-success">Sonuç(Bar)</a>
<a href="/VisualizeData/AnketeAitSonuclar2/@x.Id" style="border:1px solid blue; border-radius:4px;margin-left:8px;" class="btn btn-outline-info">Sonuç(Pie)</a></td>
        </tr>
        }
    </tbody>
</table>




<script src="~/Content/minFiles/jquery.min.js"></script>
<link href="~/Content/minFiles/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/minFiles/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/minFiles/jquery.dataTables.min.js"></script>
<script src="~/Content/minFiles/dataTables.bootstrap4.min.js"></script>

<script>

    $('#tbl1').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>




