@model ibrasOneriAnket.Models.AnketOlustur

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminControlLayout.cshtml";
    int ibc = 0;
    ViewBag.dgr = ibc;
}

<link href="~/Content/minFiles/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/minFiles/jquery.min.js"></script>
<button style="margin-left:14px;margin-bottom:5px;" id="AddButton" class="btn btn-primary">Cevap Ekle</button>
<form method="post" class="form-control" id="frm1" style="margin-left:-15px;">
    <table>
        <thead>
            <tr>
                <td>
                    <div class="container">
                        <br /><label id="lbl1">Anket Adı:</label>
                        @Html.TextBoxFor(x => x.AnketAdi, new { @class = "form-control" })
                    </div>
                    <div class="container">
                        <br /><p style="font-weight:bold;">Anket Başlangıcı:</p>
                        @Html.TextBoxFor(a => a.AnketBaslangic, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>
                    <div class="container">
                        <br /><p style="font-weight:bold;">Anket Bitişi:</p>
                        @Html.TextBoxFor(a => a.AnketBitis, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" }) <br />
                    </div>
                    <div class="container">
                        <p style="font-weight:bold;">Sıra No:</p>
                        <input type="text" class="form-control" style="width:100px;" maxlength="2" name="siraNo" value="@ViewBag.siraNo"> <br />
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="cevaplar"></td>
            </tr>
        </tbody>
    </table>
    <button style="margin-left:12px;" class="btn btn-success" type="submit" id="btn1">OLUŞTUR</button>
</form>
<input type="hidden" id="totalContacts" value="@ViewBag.dgr" />

@*<div class="container">
        <button style="margin-left:14px;margin-bottom:5px;" id="AddButton" class="btn btn-primary">Cevap Ekle</button>

    </div>*@
<style>
    #frm1 {
        border: none;
    }

    label {
        width: 70px;
    }
</style>
<script src="~/Content/minFiles/jquery-3.3.1.slim.min.js"></script>
<script>
    $(document).ready(function () {
        $("#AddButton").click(function () {
            tc = parseInt($("#totalContacts").val());
            tc = tc + 1;
            $("#totalContacts").val(tc)
            $("#cevaplar").append('<div class="container"><p style="font-weight:bold">Cevap: </p> <input type="text" class="form-control" style="display:flex;" name="AnketCevaps[' + (tc - 1) + '].Cevap" /><br></div>')
        });

        $("#cevaplar").on("click", "span", function () {
            tc = parseInt($("#totalContacts").val());
            tc = tc - 1;
            $("#totalContacts").val(tc)

            $(this).parents("tr").remove();
        });
    });
</script>