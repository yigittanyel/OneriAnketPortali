@model ibrasOneriAnket.Models.AnketOlustur

@{
    ViewBag.Title = "YeniCevapEkle";
    Layout = "~/Views/Shared/_AdminControlLayout.cshtml";
    int ibc = 0;
    ViewBag.dgr = ibc;
}
<link href="~/Content/minFiles/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/minFiles/jquery.min.js"></script>


<button id="AddButton" class="btn btn-primary">Cevap Ekle</button>
<form method="post" class="form-control" id="frm1">
    <table>
        <thead>
            <tr>
                <td>
                    <b style="display:flex;justify-content:center;text-align:center;"> <span style="border:5px solid green;border-radius:5px;padding:5px; font-size:17px;"> SORU:  @ViewBag.Soru </span></b>
                    <div class="container">
                        <br />

                        <br /><label id="lbl1" style="display:none;">Anket Id:</label> @Html.HiddenFor(x => x.Id)
                    </div>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="cevaplar"></td>
            </tr>
        </tbody>
    </table>
    <br /><button class="btn btn-success" id="btn1">OLUŞTUR</button>
</form>
<input type="hidden" id="totalContacts" value="@ViewBag.dgr" />

<style>
    #frm1 {
        border: none;
    }

    label {
        width: 70px;
    }
</style>
<script src="~/Content/minFiles/jquery-3.3.1.slim.min.js"></script>

<script>
    $(document).ready(function () {
        $("#AddButton").click(function () {
            tc = parseInt($("#totalContacts").val());
            tc = tc + 1;
            $("#totalContacts").val(tc)

            $("#cevaplar").append('<div class="container"><p style="font-weight:bold">Cevap: &nbsp; </p> <input type="text" class="form-control" style="display:flex;" name="AnketCevaps[' + (tc - 1) + '].Cevap" /><br></div>')
        });

        $("#cevaplar").on("click", "span", function () {
            tc = parseInt($("#totalContacts").val());
            tc = tc - 1;
            $("#totalContacts").val(tc)

            $(this).parents("tr").remove();
        });

        //$("#btn1".click(function () {
        //    alert("Boş değer girişi yapılamaz...");
        //});
    });

</script>