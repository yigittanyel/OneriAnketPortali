@using ibrasOneriAnket.Models
@model List<Oneri>
@{
    ViewBag.Title = "OneriGoruntule";
    Layout = "~/Views/Shared/_AdminControlLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Öneri Listesi</h2>
<br />
<a href="/AdminOneri/PdfExcel" class="btn btn-outline-success" style="border:2px solid green;border-radius:10px 10px;margin-bottom:5px" ;>Pdf ~ Excel</a>
<br />
<br />
<table class="table table-striped table-dark" id="tbl1">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Mevcut Durum</th>
            <th scope="col">Öneri</th>
            <th scope="col">Birim</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Ad</td>
                <td>@x.Soyad</td>
                <td>@x.MevcutDurum</td>
                <td>@x.OneriMesajı</td>
                <td>@x.Birim.Ad</td>
                @*<td>@(x.Durum==true ? "Aktif" : "Pasif") </td>*@
                @*<td><a href="/AdminOneri/OneriDegerlendir/@x.Id" class="btn btn-">Değerlendir</a></td>*@
                <td><a href="/AdminOneri/OneriSil/@x.Id" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
                <td><a href="/AdminOneri/OneriGetir/@x.Id" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


