
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>

    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                    text-decoration: none;
                }

                .topnav a.active {
                    background-color: #04AA6D;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="topnav">
        <a class="nav-link" href="/Anket/Index">
            <div class="sb-nav-link-icon"><i class="fas fa-thin fa-file"></i></div>
            GÜNÜN ANKETİ
        </a>
        <a class="nav-link" href="/Oneri/Index">
            <div class="sb-nav-link-icon"><i class="fas fa-thin fa-plus"></i></div>
            ÖNERİ EKLE
        </a>
        <a class="nav-link" href="/AdminOneri/OneriGoruntule" style="float:left;">
            <div class="sb-nav-link-icon"><i class="fas fa-solid fa-lock"></i></div>
            ADMİN GİRİŞİ
        </a>
    </div>

    <div style="padding-left:16px">
        @RenderBody()
    </div>

</body>
</html>
