@using ibrasOneriAnket.Models
@model List<Oneri>
@{
    ViewBag.Title = "OncekiOnerileriniz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Önerileriniz</h2>
<hr />

<table class="table table-striped table-dark" id="tbl1">
    <thead>
        <tr>
            <th scope="col">Öneriyi Veren Kişi</th>
            <th scope="col">Mevcut Durum</th>
            <th scope="col">Öneri</th>
            @*<th scope="col">Dosya</th>*@
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Kullanici.Ad @x.Kullanici.Soyad</td>
            <td>@x.MevcutDurum</td>
            <td>@x.OneriMesajı</td>
            @*<td>@x.File</td>*@
            <td><a href="/Oneri/OneriSil/@x.KullaniciId" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
            <td><a href="/Oneri/OneriGetir/@x.Id" class="btn btn-primary">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>




<script src="~/Content/minFiles/jquery.min.js"></script>
<link href="~/Content/minFiles/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/minFiles/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/minFiles/jquery.dataTables.min.js"></script>
<script src="~/Content/minFiles/dataTables.bootstrap4.min.js"></script>

<script>

    $('#tbl1').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });

</script>






