@using ibrasOneriAnket.Models
@model List<Oneri>

@{
    ViewBag.Title = "OncekiOneriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3 class="text-center">Verdiğiniz Önceki Öneriler</h3>

<table class="table table-striped table-dark" id="tbl1">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Mevcut Durum</th>
            <th scope="col">Öneri</th>
            <th scope="col">Değerlendirilme Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Kullanici.Ad</td>
                <td>@x.Kullanici.Soyad</td>
                <td>@x.MevcutDurum</td>
                <td>@x.OneriMesajı</td>
                <td>
                    @(x.Degerlendirme==false ? "Değerlendirilmedi" : "Değerlendirildi")  
                </td>
    
                </tr>
                        }
    </tbody>
</table>


<script src="~/Content/minFiles/jquery.min.js"></script>
<link href="~/Content/minFiles/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/minFiles/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/minFiles/jquery.dataTables.min.js"></script>
<script src="~/Content/minFiles/dataTables.bootstrap4.min.js"></script>


